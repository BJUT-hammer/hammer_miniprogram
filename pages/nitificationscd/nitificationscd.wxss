.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

.card {
  width: 100%;
  height:100%;
  background-color: #fff;
  margin: 20rpx auto 0;
  border-radius: 20rpx;
}

page {
  min-height: 100%;
  background-color: #e4e4e4;
}

/*清除浮动样式*/

.clearfix {
  zoom: 1;
  clear: both;
}

.clearfix:after {
  display: block;
  height: 0;
  overflow: hidden;
  content: " ";
  visibility: hidden;
  clear: both;
}

.ml30 {
  margin-left: 30rpx;
}

.b-shadow {
  box-shadow: 10rpx 10rpx 20rpx #999;
}

.hidden {
  display: none;
}

.nearCard-fl {
  width: 100%;
  float: left;
}


.nearCard-fr {
  font-size: 27rpx;
  line-height: 60rpx;
  width: 100%;
  margin-left: 10%;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.nearCard-fr text {
  font-size: 10px;
}



.form_class {
  width: 100%;
}
.form_button {
  background-color: transparent;  
}
 
.form_button::after {
  border: 0px;
}

.buttonstyle { 
  box-sizing: border-box;
  width: 70%;
  height: 40px;
  font-size: 16px;
  margin-left: 16px 
}

.c-green {
  font-size: 10px;
}

.down {
  background-color: #efefef;
  border-bottom-left-radius: 20px;
  border-bottom-right-radius: 20rpx;
}

.down view {
  font-size: 26rpx;
  color: #999;
  line-height: 50rpx;
}

.feedBack {
  text-align: center;
  background-color: #eecfbd;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10rpx;
  padding: 5rpx 0;
  margin: 10rpx 0 0 0;
}